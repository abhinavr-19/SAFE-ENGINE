<Window x:Class="SafeDesk.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SafeDesk" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="#3E3E42" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#111"/>
                                <Setter Property="Foreground" Value="#444"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#222"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="SafeDesk" FontSize="56" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,0,5">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#007ACC" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="SECURE DOCUMENT ENVIRONMENT" FontSize="14" FontWeight="Bold" Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,50" LetterSpacing="2"/>

            <!-- Status Indicator -->
            <Border Background="#252526" Padding="20,15" CornerRadius="8" Margin="0,0,0,50" BorderBrush="#333" BorderThickness="1" HorizontalAlignment="Center">
                 <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                     <Border Width="10" Height="10" CornerRadius="5" Background="#4CC71E" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#4CC71E" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                        </Border.Effect>
                     </Border>
                     <TextBlock Text="System Ready" FontSize="16" FontWeight="SemiBold" Foreground="#DDD"/>
                 </StackPanel>
            </Border>

            <!-- Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Start Session" Width="160" Height="50" IsEnabled="False" Margin="15,0"/>
                <Button Content="End Session" Width="160" Height="50" IsEnabled="False" Margin="15,0"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Footer -->
         <TextBlock Text="SafeDesk Security | Offline Mode | v0.1.0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20" Foreground="#333" FontSize="11"/>
    </Grid>
</Window>
